generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Report {
  id          Int      @id @default(autoincrement())
  location    String   // ej: "Paullier entre Rivera y Rod√≥"
  description String   // ej: "Atraco por pasta base, cuidado con los asientos"
  category    String   // "robo", "narcos", "sospechoso"
  latitude    Float?   // Para mapa futuro
  longitude   Float?
  isAnonymous Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("reports")
}

model AlertSubscription {
  id        String   @id @default(cuid())
  email     String   @unique
  confirmed Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("alert_subscriptions")
}
